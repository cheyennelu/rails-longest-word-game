<div class="container">
  <h1>New Game</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li class="letter"><%= letter %></li>
    <% end %>
  </ul>

  <h5>What is the longest word you can find?</h5>
  <form action="/score" method="post">

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input name="letters" type="hidden" value="<%= @letters.join(', ') %>">
    <input type="text" name="word" size="50" class="input-field">
    <input type="submit" value="Play!" class="play-btn">
  </form>
</div>
